@model IEnumerable<InternalProj.Models.StaffRegViewModel>

@{
    ViewData["Title"] = "Staff List";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="max-w-5xl mx-auto bg-green-100 text-green-800 rounded p-3 text-center font-semibold mb-6 shadow" id="success">
        @TempData["SuccessMessage"]
    </div>
}

<script>
    setTimeout(() => {
        const success = document.getElementById('success');
        if (success) success.classList.add('hidden');
    }, 5000);
</script>

<div class="common-pages-layout">
    <div class="common-inner-container">
        <h3 class="page-heading">Staff List</h3>
    <div class="flex justify-end mb-6">
        <a asp-action="Create" class="common-btn">
            Add New Staff
        </a>
    </div>

    <!-- Responsive Table Wrapper with shadow/border on small screens -->
    <div class="w-full overflow-x-auto bg-gradient-to-r from-blue-50 to-blue-100 rounded-xl shadow-inner py-2">
        <table class="min-w-[920px] w-full border-separate border-spacing-y-1 text-center text-[15px] text-gray-700">
            <thead>
                <tr class="bg-blue-900 text-white rounded-lg">
                    @* <th class="left-0 px-4 py-3">SlNo</th> *@
                    <th class="px-4 py-3">Full Name</th>
                    @* <th class="px-4 py-3">Last Name</th> *@
                    <th class="px-4 py-3">Email</th>
                    <th class="px-4 py-3">Phone</th>
                    <th class="px-4 py-3">Branch</th>
                    <th class="px-4 py-3">Status</th>
                    <th class="right-0 px-4 py-3">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    int index = 1;
                    foreach (var staff in Model)
                    {
                        <tr class="bg-white hover:bg-blue-50 shadow-sm rounded-lg transition border-y border-blue-100">
                            @* <td class="px-3 py-2 left-0">@index</td> *@
                            <td><a href="@Url.Action("Edit", new { id = staff.StaffRegId })"
                                   class="px-3 py-2 whitespace-nowrap">
                                    @staff.FirstName @staff.LastName
                            </a></td>
                            <td class="px-3 py-2 whitespace-nowrap">@staff.Email</td>
                            <td class="px-3 py-2 whitespace-nowrap">@staff.Phone1</td>
                            <td class="px-3 py-2">@((staff.Branches?.FirstOrDefault(b => b.BranchId == staff.BranchId)?.BranchName) ?? "N/A")</td>
                            <td class="px-3 py-2 font-semibold">
                                @if (staff.Active == "Y")
                                {
                                    <span class="inline-block bg-green-50 text-green-700 px-3 py-1 rounded-full text-sm font-bold border border-green-100">Active</span>
                                }
                                else
                                {
                                    <span class="inline-block bg-red-50 text-red-700 px-3 py-1 rounded-full text-sm font-bold border border-red-100">Inactive</span>
                                }
                            </td>
                            <td class="right-0 z-10 bg-white px-3 py-2 whitespace-nowrap flex flex-col sm:flex-row items-center gap-1 justify-center">
                                @* <a href="@Url.Action("Edit", new { id = staff.StaffRegId })"
                                   class="px-3 py-1 mb-1 sm:mb-0 rounded-full text-xs font-semibold shadow transition
                                               @(staff.Active == "Y" ? "bg-blue-600 hover:bg-blue-700 text-white" : "bg-gray-300 text-gray-400 cursor-not-allowed pointer-events-none")">
                                    Edit
                                </a>
                                <a href="@Url.Action("Details", new { id = staff.StaffRegId })"
                                   class="px-3 py-1 mb-1 sm:mb-0 rounded-full text-xs font-semibold shadow transition
                                               @(staff.Active == "Y" ? "bg-indigo-600 hover:bg-indigo-700 text-white" : "bg-gray-300 text-gray-400 cursor-not-allowed pointer-events-none")">
                                    Details
                                </a> *@
                                @if (staff.Departments != null &&
                                                        !staff.Departments.Any(d =>
                                                        !string.IsNullOrEmpty(d.Name) &&
                                                        d.Name.Equals("Admin", StringComparison.OrdinalIgnoreCase)))
                                {
                                    <form asp-action="ChangeStatus" method="post" class="inline-block">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@staff.StaffRegId" />
                                        <input type="hidden" name="status" value="@(staff.Active == "Y" ? "N" : "Y")" />
                                        <button type="submit" class="px-3 py-1 mb-1 sm:mb-0 rounded-full text-xs font-semibold shadow transition
                            @(staff.Active == "Y" ? "bg-red-600 hover:bg-red-700 text-white" : "bg-green-600 hover:bg-green-700 text-white")">
                                            @(staff.Active == "Y" ? "Deactivate" : "Activate")
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    @* <span class="text-gray-400 italic">Admin – Cannot Modify</span> *@
                                        <button type="button" disabled
                                                class="px-3 py-1 mb-1 sm:mb-0 rounded-full text-xs font-semibold shadow bg-gray-300 text-gray-400 cursor-not-allowed">
                                            @(staff.Active == "Y" ? "Deactivate" : "Activate")
                                        </button>
                                }
                            </td>
                        </tr>    
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="8" class="text-gray-500 italic py-8 text-center bg-white rounded-b-lg">No staff records found.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
</div>