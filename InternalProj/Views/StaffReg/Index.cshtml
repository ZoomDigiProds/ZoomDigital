@model IEnumerable<InternalProj.Models.StaffRegViewModel>

@{
    ViewData["Title"] = "Staff List";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        padding: 40px 0;
    }

    .staff-container {
        background-color: #ffffff;
        border-radius: 18px;
        padding: 35px;
        max-width: 1300px;
        margin: auto;
    }

    h2 {
        color: black;
        text-align: center;
        margin-bottom: 25px;
        font-weight: 700;
        letter-spacing: 1px;
    }

    .btn-add {
        color: white;
        border: none;
        padding: 10px 20px;
        font-weight: 600;
        border-radius: 8px;
        background-color: #673ab7;
        transition: all 0.3s ease-in-out;
    }

        .btn-add:hover {
            transform: scale(1.03);
            background-color: #5e35b1;
        }

    .table th, .table td {
        vertical-align: middle !important;
        text-align: center;
        font-size: 14px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f3e5f5;
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: #ede7f6;
    }

    .table-striped tbody tr:hover {
        background-color: #d1c4e9;
    }

    .btn-sm {
        font-size: 13px;
        padding: 6px 14px;
        border-radius: 6px;
    }

    .alert {
        max-width: 1300px;
        margin: auto;
    }

    .no-records {
        color: #999;
        font-style: italic;
    }
</style>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center" id="success">
        @TempData["SuccessMessage"]
    </div>
}

<script>
    setTimeout(() => {
        $('#success').fadeOut('slow');
    }, 5000);
</script>

<div class="staff-container">
    <h2>Staff List</h2>

    <div class="text-end mb-3">
        <a asp-action="Create" class="btn btn-add">Add New Staff</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>SlNo</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Branch</th>
                @* <th>Category</th> *@
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                int index = 1;
                foreach (var staff in Model)
                {
                    <tr>
                        <td>@index</td>
                        <td>@staff.FirstName</td>
                        <td>@staff.LastName</td>
                        <td>@staff.Email</td>
                        <td>@staff.Phone1</td>
                        <td>@(staff.Branches?.FirstOrDefault(b => b.BranchId == staff.BranchId)?.BranchName ?? "N/A")</td>
                        @* <td>@(staff.CustomerCategories?.FirstOrDefault(c => c.CategoryId == staff.CategoryId)?.CategoryName ?? "N/A")</td> *@
                        <td>
                            @if (staff.Active == "Y")
                            {
                                <span class="text-success fw-bold">Active</span>
                            }
                            else
                            {
                                <span class="text-danger fw-bold">Inactive</span>
                            }
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", new { id = staff.StaffRegId })"
                               class="btn btn-primary btn-sm me-1 @(staff.Active == "Y" ? "" : "disabled")">
                                Edit
                            </a>
                            <a href="@Url.Action("Details", new { id = staff.StaffRegId })"
                               class="btn btn-primary btn-sm me-1 @(staff.Active == "Y" ? "" : "disabled")">
                                Details
                            </a>
                            <form asp-action="ChangeStatus" method="post" style="display:inline;">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@staff.StaffRegId" />
                                <input type="hidden" name="status" value="@(staff.Active == "Y" ? "N" : "Y")" />
                                <button type="submit" class="btn btn-sm @(staff.Active == "Y" ? "btn-danger" : "btn-success")">
                                    @(staff.Active == "Y" ? "Deactivate" : "Activate")
                                </button>
                            </form>
                        </td>
                    </tr>
                    index++;
                }
            }
            else
            {
                <tr>
                    <td colspan="9" class="text-center no-records">No staff records found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
