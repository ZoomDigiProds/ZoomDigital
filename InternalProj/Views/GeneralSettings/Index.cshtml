@model IEnumerable<InternalProj.Models.GeneralSettings>

@{
    ViewData["Title"] = "General Settings";
}

<h2>General Settings</h2>

@* <p>
    <a asp-action="Edit" class="btn btn-primary">Create New Setting</a>
</p> *@

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Setting Type</th>
            <th>Value</th>
            <th>Created Date</th>
            <th>Updated Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SettingType</td>
                <td>@item.Value</td>
                <td>@item.CreateDate.ToString("dd-MM-yyyy HH:mm")</td>
                <td>@(item.UpdatedDate?.ToString("dd-MM-yyyy HH:mm") ?? "-")</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
