@model IEnumerable<InternalProj.ViewModel.WorkOrderSummaryViewModel>

<div class="overflow-x-auto">
    <table class="min-w-full border border-gray-300 divide-y divide-gray-200 table-auto">
        <thead class="bg-gray-100">
            <tr>
                <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 border-r border-gray-300 whitespace-nowrap">
                    Work Order No
                </th>
                <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 border-r border-gray-300 whitespace-nowrap">
                    Studio Name
                </th>
                <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 border-r border-gray-300 whitespace-nowrap">
                    Size
                </th>
                <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 whitespace-nowrap">
                    SubTotal
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-2 py-1 border-r border-gray-300 whitespace-nowrap text-gray-900 text-sm">
                            @item.WorkOrderNo
                        </td>
                        <td class="px-2 py-1 border-r border-gray-300 whitespace-nowrap text-gray-700 text-sm">
                            @item.StudioName
                        </td>
                        <td class="px-2 py-1 border-r border-gray-300 whitespace-nowrap text-gray-700 text-sm text-center">
                            @item.Size
                        </td>
                        <td class="px-2 py-1 whitespace-nowrap text-gray-700 text-sm text-right">
                            @item.SubTotal.ToString("N2")
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="px-4 py-3 text-center text-gray-500 text-sm">
                        No work orders found.
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
