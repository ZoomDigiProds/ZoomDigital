@model IEnumerable<InternalProj.ViewModel.DailyTransactionViewModel>

@if (Model == null || !Model.Any())
{
    <div class="text-center text-gray-500 italic py-6">
        No transactions found for today.
    </div>
}
else
{
    <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-300 divide-y divide-gray-200 table-auto">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 border-r border-gray-300 whitespace-nowrap">
                        Work Order No
                    </th>
                    <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 border-r border-gray-300 whitespace-nowrap">
                        Studio
                    </th>
                    <th class="px-2 py-1 text-right text-sm font-semibold text-gray-700 border-r border-gray-300 whitespace-nowrap">
                        Amount
                    </th>
                    <th class="px-2 py-1 text-center text-sm font-semibold text-gray-700 whitespace-nowrap">
                        Time
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-2 py-1 border-r border-gray-300 whitespace-nowrap text-gray-900 text-sm">
                            @item.WorkOrderNo
                        </td>
                        <td class="px-2 py-1 border-r border-gray-300 whitespace-nowrap text-gray-700 text-sm">
                            @item.StudioName
                        </td>
                        <td class="px-2 py-1 border-r border-gray-300 whitespace-nowrap text-gray-700 text-sm text-right">
                            ₹@item.BillAmount.ToString("0.00")
                        </td>
                        <td class="px-2 py-1 whitespace-nowrap text-gray-700 text-sm">
                            @item.LastTransactionDate.ToString("hh:mm tt")
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}