@{
    ViewData["Title"] = "Forgot Password";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background: linear-gradient(to right, #f5f7fa, #c3cfe2);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .forgot-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .forgot-box {
        background-color: #ffffff;
        padding: 40px;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 420px;
    }

    .forgot-title {
        font-size: 24px;
        font-weight: 700;
        text-align: center;
        margin-bottom: 25px;
        color: #2c3e50;
    }

    .form-label {
        font-weight: 600;
        font-size: 14px;
    }

    .form-control {
        height: 42px;
        font-size: 14px;
        border-radius: 6px;
    }

    .btn-primary {
        background-color: #1d3557;
        border: none;
        width: 100%;
        padding: 10px;
        font-weight: 600;
        border-radius: 6px;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #457b9d;
        }

    .alert {
        font-size: 14px;
        padding: 10px;
        margin-bottom: 20px;
    }

    .back-link {
        display: block;
        text-align: center;
        margin-top: 15px;
        font-size: 14px;
        color: #1d3557;
    }

        .back-link:hover {
            text-decoration: underline;
        }
</style>

<div class="forgot-container">
    <div class="forgot-box">
        <h3 class="forgot-title">Forgot Password</h3>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        <script>
            setTimeout(() => {
                $('#success').fadeOut('slow');
            }, 5000);
        </script>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label class="form-label">Enter Email or Username</label>
                <input type="text" name="usernameOrEmail" class="form-control" required />
            </div>

            <button type="submit" class="btn btn-primary">Send Reset Link</button>
        </form>

        <a asp-action="Login" class="back-link">Back to Login</a>
    </div>
</div>
