@model InternalProj.Models.StudioCallLog

@{
    ViewData["Title"] = "Create";
}

<h3 class="text-center text-2xl font-extrabold mt-8 mb-8 text-gray-900">Create Call Log</h3>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-indigo-50 to-white py-8 px-2">
    <div class="w-full max-w-2xl bg-white rounded-2xl shadow-xl p-8">

        <div class="flex items-center mb-6">
            @* <div class="bg-indigo-100 p-3 rounded-full mr-4">
                <svg class="h-8 w-8 text-indigo-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5a1 1 0 001 1h2l2 4v1a5 5 0 005 5h1l2-4h2a1 1 0 001-1V4z" />
                </svg>
            </div> *@
            <div>
                @* <h1 class="text-2xl font-extrabold text-indigo-700">Create Call Log</h1> *@
                @* <p class="text-gray-500">Document a new studio call event</p> *@
            </div>
        </div>

        <form asp-action="Create" class="space-y-5">

            <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-3"></div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label asp-for="CustomerId" class="block text-sm font-semibold mb-1 text-gray-700">Customer</label>
                    <select asp-for="CustomerId"
                            class="w-full border border-gray-300 rounded-lg shadow-sm focus:ring focus:ring-indigo-300 transition px-3 py-2"
                            asp-items="ViewBag.CustomerId" id="customerSelect">
                        <option value="">-- Select Customer --</option>
                    </select>
                </div>
                <div>
                    <label asp-for="CallTime" class="block text-sm font-semibold mb-1 text-gray-700">Call Time</label>
                    <input asp-for="CallTime"
                           class="w-full border border-gray-300 rounded-lg shadow-sm px-3 py-2 focus:ring focus:ring-indigo-300" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label asp-for="StudioName" class="block text-sm font-semibold mb-1 text-gray-700">Studio Name</label>
                    <input asp-for="StudioName" readonly
                           class="w-full bg-gray-100 border border-gray-300 rounded-lg px-3 py-2 text-gray-600" />
                </div>
                <div>
                    <label asp-for="Phone" class="block text-sm font-semibold mb-1 text-gray-700">Phone</label>
                    <input asp-for="Phone" readonly
                           class="w-full bg-gray-100 border border-gray-300 rounded-lg px-3 py-2 text-gray-600" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-5">
                <div>
                    <label asp-for="Region" class="block text-sm font-semibold mb-1 text-gray-700">Address (Region)</label>
                    <input asp-for="Region" readonly
                           class="w-full bg-gray-100 border border-gray-300 rounded-lg px-3 py-2 text-gray-600" />
                </div>
                <div>
                    <label asp-for="UpdatedCallTime" class="block text-sm font-semibold mb-1 text-gray-700">Updated Call Time</label>
                    <input asp-for="UpdatedCallTime"
                           class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-indigo-300" />
                </div>
            </div>

            <div>
                <label asp-for="Description" class="block text-sm font-semibold mb-1 text-gray-700">Description</label>
                <textarea asp-for="Description" rows="4"
                          class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-indigo-300"></textarea>
            </div>

            <input type="hidden" asp-for="Active" value="Y" />

            <div class="flex items-center justify-end space-x-4 mt-4">
                <input type="submit"
                       value="Create"
                       class="px-8 py-2 bg-indigo-600 text-white font-semibold rounded-xl shadow hover:bg-indigo-700 transition" />
                <a asp-action="Index"
                   class="inline-block px-8 py-2 bg-gray-200 text-gray-700 font-semibold rounded-xl shadow hover:bg-gray-300 transition">
                    Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#customerSelect').change(function () {
                const customerId = $(this).val();
                if (customerId) {
                    $.ajax({
                        url: '/StudioCallLogs/GetCustomerDetails/' + customerId,
                        type: 'GET',
                        success: function (data) {
                            $('[name="StudioName"]').val(data.studioName);
                            $('[name="Phone"]').val(data.phone);
                            $('[name="Address1"]').val(data.address1);
                            $('[name="Address2"]').val(data.address2);
                            $('[name="State"]').val(data.state);
                            $('[name="Region"]').val(data.region);
                        },
                        error: function () {
                            alert('Error loading customer details.');
                        }
                    });
                } else {
                    // Clear all fields
                    $('[name="StudioName"], [name="Phone"], [name="Address1"], [name="Address2"], [name="State"], [name="Region"]').val('');
                }
            });
        });
    </script>
}
