@model InternalProj.Models.StudioCallLog

@{

    ViewData["Title"] = "Edit";
    // Convert CallTime to local time
    var localCallTime = DateTime.SpecifyKind(Model.CallTime, DateTimeKind.Utc).ToLocalTime();
    var localUpdated = Model.UpdatedCallTime.HasValue
        ? DateTime.SpecifyKind(Model.UpdatedCallTime.Value, DateTimeKind.Utc).ToLocalTime()
        : (DateTime?)null;
}

<h1>Edit Details</h1>

<h4>StudioCallLog</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CallId" />
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control" asp-items="ViewBag.CustomerId" disabled></select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudioName" class="control-label"></label>
                <input asp-for="StudioName" class="form-control" readonly />
                <span asp-validation-for="StudioName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label>
                <input asp-for="Phone" class="form-control" readonly />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Region" class="control-label"></label>
                <input asp-for="Region" class="form-control" readonly />
                <span asp-validation-for="Region" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CallTime" class="control-label"></label>
                <input class="form-control" type="datetime-local"
                       name="CallTime"
                       value="@localCallTime.ToString("yyyy-MM-ddTHH:mm")" />
                <span asp-validation-for="CallTime" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UpdatedCallTime" class="control-label"></label>
                <input class="form-control" type="datetime-local"
                       name="UpdatedCallTime"
                       value="@(localUpdated.HasValue ? localUpdated.Value.ToString("yyyy-MM-ddTHH:mm") : "")" />

                <span asp-validation-for="UpdatedCallTime" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}