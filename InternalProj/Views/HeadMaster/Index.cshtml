@model InternalProj.ViewModel.HeadMasterViewModel

@{
    ViewData["Title"] = "Head Master";
    Layout = "_Layout";
}

<h2 class="text-center mb-4">Head Master</h2>
<div class="row">
    <div class="col-md-6">
        <div id="hierarchyTree" class="border rounded p-3">
            <ul class="list-unstyled">
                @foreach (var main in Model.MainHeads)
                {
                    <li>
                        <span class="expand-toggle fw-bold text-primary" data-target="#main-@main.MainHeadId">+ @main.MainHeadName</span>
                        <ul class="list-unstyled ps-3 collapse" id="main-@main.MainHeadId">
                            @foreach (var sub in Model.SubHeads.Where(s => s.MainHeadId == main.MainHeadId))
                            {
                                <li>
                                    <span class="expand-toggle text-secondary" data-target="#sub-@sub.SubHeadId">+ @sub.SubHeadName</span>
                                    <ul class="list-unstyled ps-3 collapse" id="sub-@sub.SubHeadId">
                                        @foreach (var size in Model.AlbumSizes)
                                        {
                                            <li>
                                                <span class="expand-size text-dark"
                                                      data-mainheadid="@main.MainHeadId"
                                                      data-subheadid="@sub.SubHeadId"
                                                      data-sizeid="@size.SizeId"
                                                      data-sizename="@size.Size"
                                                      data-target="#size-@sub.SubHeadId-@size.SizeId">+ @size.Size</span>

                                                <ul class="list-unstyled ps-3 collapse" id="size-@sub.SubHeadId-@size.SizeId">
                                                    @foreach (var child in Model.ChildSubHeads.Where(c => c.SubHeadId == sub.SubHeadId))
                                                    {
                                                        <li class="small">@child.ChildSubHeadName</li>
                                                    }
                                                </ul>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }
                        </ul>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="col-md-6">
        <h5 class="mb-3">SubHeads & Rates</h5>
        <div id="ratePanel">
            <div class="alert alert-info">Select a size to view subheads and rates</div>
        </div>
    </div>        
</div>



@section Scripts {
    <script>
        // Expand/collapse toggle for MainHead and SubHead
        $(document).on('click', '.expand-toggle', function () {
            const target = $(this).data('target');
            $(target).collapse('toggle');
        });

        // Expand Size: show subheads and rates for selected MainHead and Size
        $(document).on('click', '.expand-size', function () {
            const subHeadId = $(this).data('subheadid');
            const sizeId = $(this).data('sizeid');
            const mainHeadId = $(this).data('mainheadid');
            const sizeName = $(this).data('sizename');

            $.get('/HeadMaster/GetSubHeadsAndRates', { mainHeadId, sizeId }, function (data) {
                let html = `<h6 class="text-primary mb-2">Selected Size: ${sizeName}</h6>`; // 👈 show size name
                    html += `<table class="table table-bordered table-sm">
                                <thead class="table-light">
                                    <tr>
                                        <th>SubHead</th>
                                        <th>Rate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>`;

                data.forEach(item => {
                            html += `<tr class="clickable-subhead" data-subheadid="${item.subHeadId}">
                                <td>${item.subHeadName}</td>
                                <td>
                                    ${item.hasRate ? item.rate :
                                        `<input type="number" step="0.01" class="form-control form-control-sm newRateInput" data-subheadid="${item.subHeadId}" placeholder="Enter Rate">`}
                                </td>
                                <td>
                                    ${item.hasRate ? '' : `<button class="btn btn-sm btn-success saveRateBtn" data-subheadid="${item.subHeadId}" data-sizeid="${sizeId}">Save</button>`}
                                </td>
                             </tr>`;

                    if (item.childSubHeads && item.childSubHeads.length > 0) {
                        item.childSubHeads.forEach(child => {
                            html += `<tr>
                                        <td class="ps-4 text-muted">↳ ${child.childSubHeadName}</td>
                                        <td colspan="2"></td>
                                     </tr>`;
                        });
                    }

                // Add row to add new ChildSubHead under this SubHead
                html += `<tr>
                            <td class="ps-4">
                                <input type="text" class="form-control form-control-sm newChildName" data-subheadid="${item.subHeadId}" placeholder="New ChildSubHead" />
                            </td>
                            <td colspan="2">
                                <button class="btn btn-sm btn-primary addChildSubHeadBtn" data-subheadid="${item.subHeadId}">Add</button>
                            </td>
                         </tr>`;

                        });

                        // Row to add new SubHead with rate
                        html += `<tr>
                                    <td><input type="text" class="form-control form-control-sm" id="newSubHeadName" placeholder="New SubHead Name" /></td>
                                    <td><input type="number" class="form-control form-control-sm" id="newSubHeadRate" placeholder="Rate" /></td>
                                    <td><button class="btn btn-sm btn-primary" id="addNewSubHeadBtn" data-mainheadid="${mainHeadId}" data-sizeid="${sizeId}">Add</button></td>
                                 </tr>`;

                        html += `</tbody></table>`;

                        $('#ratePanel').find('h6:contains("Child SubHeads")').nextAll().remove();
                        $('#ratePanel').html(html);
                    });
                });

        // Save rate for an existing SubHead
        $(document).on('click', '.saveRateBtn', function () {
            const subHeadId = $(this).data('subheadid');
            const sizeId = $(this).data('sizeid');
            const rateInput = $('.newRateInput[data-subheadid="' + subHeadId + '"]');
            const rate = parseFloat(rateInput.val());

            if (isNaN(rate) || rate <= 0) {
                alert('Enter a valid rate.');
                return;
            }

            $.post('/HeadMaster/AddRate', {
                subHeadId: subHeadId,
                sizeId: sizeId,
                rate: rate
            }).done(() => {
                $('.expand-size[data-subheadid="' + subHeadId + '"][data-sizeid="' + sizeId + '"]').click();
            });
        });

        // Add new SubHead and then add rate
        $(document).on('click', '#addNewSubHeadBtn', function () {
            const mainHeadId = $(this).data('mainheadid');
            const sizeId = $(this).data('sizeid');
            const name = $('#newSubHeadName').val().trim();
            const rate = parseFloat($('#newSubHeadRate').val());

            if (!name || isNaN(rate) || rate <= 0) {
                alert("Enter valid SubHead name and rate.");
                return;
            }

            // Step 1: Add SubHead
            $.post('/HeadMaster/AddSubHead', { mainHeadId, subHeadName: name })
                .done(res => {
                    const subHeadId = res.subHead.subHeadId;

                    // Step 2: Add Rate
                    $.post('/HeadMaster/AddRate', {
                        subHeadId,
                        sizeId,
                        rate,
                        name
                    }).done(() => {
                        $('.expand-size[data-sizeid="' + sizeId + '"]').first().click();
                    });
                });
        });

        // (Optional) Add ChildSubHead table and entry logic on SubHead row click
        $(document).on('click', '.clickable-subhead', function () {
            const subHeadId = $(this).data('subheadid');

            $.get('/HeadMaster/GetChildSubHeads', { subHeadId }, function (data) {
                let html = `<h6 class="mt-3">Child SubHeads</h6>
                            <table class="table table-bordered table-sm">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>`;

                data.forEach(c => {
                    html += `<tr>
                                <td>${c.childSubHeadName}</td>
                                <td></td>
                             </tr>`;
                });

                html += `<tr>
                            <td><input type="text" class="form-control form-control-sm" id="newChildName" placeholder="New ChildSubHead" /></td>
                            <td><button class="btn btn-sm btn-primary" id="addChildSubHeadBtn" data-subheadid="${subHeadId}">Add</button></td>
                         </tr>`;

                html += `</tbody></table>`;
                $('#ratePanel').append(html);
            });
        });

        // Save new ChildSubHead
               $(document).on('click', '.addChildSubHeadBtn', function () {
            const subHeadId = $(this).data('subheadid');
            const input = $('.newChildName[data-subheadid="' + subHeadId + '"]');
            const childName = input.val().trim();

            if (!childName) {
                alert('Enter ChildSubHead name.');
                return;
            }

            $.post('/HeadMaster/AddChildSubHead', {
                subHeadId,
                childSubHeadName: childName
            }).done(() => {
                $('.expand-size[data-subheadid="' + subHeadId + '"]').click(); // Collapse
                setTimeout(() => {
                    $('.expand-size[data-subheadid="' + subHeadId + '"]').click(); // Expand to refresh
                }, 200);
            });
        });

    </script>
}
