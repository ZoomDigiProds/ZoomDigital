@model List<InternalProj.ViewModel.DailyTransactionSummaryViewModel>

<h2>Daily Transactions</h2>
<div class="text-end mb-3">
    <strong>Total Amount:</strong> ₹@ViewBag.TotalAmount.ToString("0.00")
</div>

<table class="table table-bordered table-sm mb-0">
    <thead>
        <tr>
            <th>Date</th>
            <th>Studio Name</th>
            <th class="text-end">Subtotal</th>
            <th class="text-end">Advance</th>
            <th class="text-end">Paid</th>
            <th class="text-end">Balance</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tx in Model)
        {
            <tr>
                <td>@tx.Date.ToString("dd-MMM-yyyy")</td>
                <td>@tx.StudioName</td>
                <td class="text-end">@tx.SubTotal.ToString("0.00")</td>
                <td class="text-end">@tx.Advance.ToString("0.00")</td>
                <td class="text-end">@tx.TotalPaid.ToString("0.00")</td>
                <td class="text-end">@tx.Balance.ToString("0.00")</td>
            </tr>
        }
    </tbody>
</table>