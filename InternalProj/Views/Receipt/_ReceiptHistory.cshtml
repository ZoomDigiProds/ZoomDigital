@model InternalProj.ViewModel.ReceiptHistoryViewModel

<h3 class="text-2xl font-semibold mb-4 text-gray-900">Payment History</h3>
<h5 class="text-lg mb-6 text-gray-700">
    Customer: <strong class="text-gray-900">@Model.CustomerName</strong> | Studio: <strong class="text-gray-900">@Model.StudioName</strong>
</h5>

<div class="overflow-x-auto rounded-lg shadow-md border border-gray-300">
    <table class="min-w-full divide-y divide-gray-200 table-auto">
        <thead class="bg-blue-50">
            <tr>
                <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider border-r border-gray-200 whitespace-nowrap">Receipt No</th>
                <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider border-r border-gray-200 whitespace-nowrap">Date</th>
                <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider border-r border-gray-200 whitespace-nowrap">Mode</th>
                <th class="px-5 py-3 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider border-r border-gray-200 whitespace-nowrap">WorkOrder No</th>
                <th class="px-5 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider border-r border-gray-200 whitespace-nowrap">Net Amount</th>
                <th class="px-5 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider border-r border-gray-200 whitespace-nowrap">Paid</th>
                <th class="px-5 py-3 text-right text-xs font-semibold text-gray-600 uppercase tracking-wider whitespace-nowrap">Remaining Balance</th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200 text-sm">
            @foreach (var receipt in Model.Receipts)
            {
                <tr class="hover:bg-blue-50 transition-colors">
                    <td class="px-5 py-3 border-r border-gray-200 whitespace-nowrap text-gray-900 font-medium">@receipt.ReceiptId</td>
                    <td class="px-5 py-3 border-r border-gray-200 whitespace-nowrap text-gray-700">@receipt.ReceiptDate.ToString("dd-MM-yyyy")</td>
                    <td class="px-5 py-3 border-r border-gray-200 whitespace-nowrap text-gray-700">@receipt.ModeOfPayment?.ModeType ?? "N/A"</td>
                    <td class="px-5 py-3 border-r border-gray-200 whitespace-nowrap text-gray-700">@receipt.WorkOrder?.WorkOrderNo ?? "N/A"</td>
                    <td class="px-5 py-3 border-r border-gray-200 whitespace-nowrap text-gray-700 text-right">₹ @receipt.NetAmount.ToString("0.00")</td>
                    <td class="px-5 py-3 border-r border-gray-200 whitespace-nowrap text-gray-700 text-right">₹ @receipt.CurrentAmount.ToString("0.00")</td>
                    <td class="px-5 py-3 whitespace-nowrap text-gray-700 text-right">₹ @(receipt.WorkOrder?.Balance?.ToString("0.00") ?? "0.00")</td>
                </tr>
            }
        </tbody>
        <tfoot class="bg-gray-100 font-semibold text-gray-800">
            <tr>
                <td colspan="4" class="px-5 py-3 border-t border-gray-300 text-left">Total</td>
                <td class="px-5 py-3 border-t border-gray-300 text-right">₹ @Model.Receipts.Sum(r => r.NetAmount).ToString("0.00")</td>
                <td class="px-5 py-3 border-t border-gray-300 text-right">₹ @Model.Receipts.Sum(r => r.CurrentAmount).ToString("0.00")</td>
                <td class="px-5 py-3 border-t border-gray-300"></td>
            </tr>
        </tfoot>
    </table>
</div>
